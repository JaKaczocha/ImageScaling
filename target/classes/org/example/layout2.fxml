<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="480" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">
    <content>
      <VBox spacing="10">
          <children>
              <HBox alignment="CENTER" spacing="10" style="-fx-background-color: lightgray;">
                  <children>
                      <ImageView fx:id="imageBefore" fitHeight="148.0" fitWidth="216.0" pickOnBounds="true" preserveRatio="true" />
                      <ImageView fx:id="imageAfter" fitHeight="141.0" fitWidth="205.0" pickOnBounds="true" preserveRatio="true" />
                  </children>
              </HBox>
              <HBox alignment="CENTER" spacing="10">
                  <children>
                      <Button fx:id="selectImageButton" layoutX="71.0" layoutY="280.0" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#selectImageButtonPressed" prefHeight="32.0" prefWidth="136.0" text="Wczytaj" />
                      <Button fx:id="applyChangesButton" layoutX="264.0" layoutY="280.0" mnemonicParsing="false" onAction="#applyChangesButtonPressed" prefHeight="32.0" prefWidth="70.0" text="----&gt;" />
                      <Button fx:id="saveImageButton" layoutX="410.0" layoutY="280.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#buttonSave" prefHeight="32.0" prefWidth="155.0" text="Zapisz" />
                  </children>
              </HBox>
              <VBox alignment="CENTER_LEFT" spacing="15">
                  <children>
                      <Label layoutX="112.0" layoutY="409.0" prefHeight="27.0" prefWidth="95.0" text="Wybierz metodę:" />
                      <RadioButton fx:id="nearestNeighbor" layoutX="121.0" layoutY="436.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="136.0" selected="true" text="najbliższego sąsiada">
                          <toggleGroup>
                              <ToggleGroup fx:id="metody" />
                          </toggleGroup>
                      </RadioButton>
                      <RadioButton fx:id="bicubic" layoutX="379.0" layoutY="436.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="95.0" text="dwukubiczna" toggleGroup="$metody" />
                      <RadioButton fx:id="bilinear" layoutX="275.0" layoutY="436.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="87.0" text="dwuliniowa" toggleGroup="$metody" />
                  </children>
              </VBox>
              <VBox alignment="CENTER" prefHeight="138.0" prefWidth="431.0" spacing="10">
                  <children>
                      <Label layoutX="112.0" layoutY="337.0" prefHeight="27.0" prefWidth="70.0" text="Skalowanie:" />
                      <Slider fx:id="mySlider" layoutX="106.0" layoutY="364.0" majorTickUnit="50" max="500" maxWidth="400.0" min="50" minorTickCount="0" prefWidth="400.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="slider" value="0" />

                      <Label layoutX="112.0" layoutY="337.0" prefHeight="27.0" prefWidth="70.0" text="Zoom:" />
                      <Slider fx:id="zoomSlider" layoutX="106.0" layoutY="364.0" majorTickUnit="1" max="10" maxWidth="400.0" min="1" minorTickCount="0" prefWidth="400.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="slider" value="0" />
                  </children>
              </VBox>
          </children>
      </VBox>
    </content>
</ScrollPane>
